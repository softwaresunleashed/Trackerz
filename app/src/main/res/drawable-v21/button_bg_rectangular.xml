<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">

    <shape
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

        <!-- Color of Border to be set here -->
        <stroke android:width="1dp" android:color="@color/white" />

        <corners android:radius="4dp" />

        <!-- Color of Background to be set here ...
                Transparent #0000000000
                #FF000000 needs to be set if you want the colors in gradient to be seen
            <solid android:color="#EE000000" />
        -->

        <!-- Add Gradient to the layout
        <gradient
            android:startColor="#ffecc9"
            android:endColor="#00000000"
            android:angle="90" />
        -->

        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />

    </shape>


</ripple>
